<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                <p class="thick-title">Login</p>
                <form action="/login" method="POST">
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="loginEmail" class="form-label">Email</label>
                            <input name="email" type="email" class="form-control" id="loginEmail" aria-describedby="loginEmail" placeholder="email">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="loginPassword" class="form-label">Password</label>
                            <input name="password" type="password" class="form-control" id="loginPassword" aria-describedby="loginPassword" placeholder="password">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-5">
                        <button class="btn-white-medium" type="submit">LOGIN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                <p class="thick-title">Registration User</p>
                <form action="/register/default" method="POST">
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="text" name="name" class="form-control" id="registerName" aria-describedby="registerName" placeholder="* Full Name" required>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-12">
