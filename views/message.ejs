<script>
function parseMessage(code){
    switch(code){
        case '1':
        return 'Registration successful! Please check your email.';
        break;
        case '2':
        return 'Verification successful! Please login through the <a href="/">landing page</a>.';
        break;
        case '3':
        return 'Your new token has been sent to your email. Please check your email.'
        break;
    }
}

function showAlert(color, message) {
    $(`#alert-${color}`).removeClass('d-none');
    $(`#alert-${color}`).html(message);
}
showAlert('<%= color %>', parseMessage('<%= message %>'));
</script>